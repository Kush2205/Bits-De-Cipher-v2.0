{
  "name": "Bits-De-Cipher-v2.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma:generate": "cd packages/database && bun prisma generate",
    "prisma:migrate": "cd packages/database && bun prisma migrate dev",
    "seed:db": "bun run packages/utils/index.ts",
    "reset:db": "cd packages/database && bun prisma migrate reset --force",
    "start:db": "docker run -d -p 5432:5432 --name bits_de_cipher_db -e POSTGRES_PASSWORD=postgres postgres && sleep 5 && bun prisma:migrate && bun seed:db"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "axios": "^1.13.2",
    "lucide-react": "^0.562.0",
    "zod": "^4.2.1"
  }
}
