
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id                     String    @id @default(uuid())
  email                  String    @unique
  name                   String?
  passwordHash           String?   
  googleId               String?   @unique
  refreshTokenHash       String?   
  totalPoints            Int       @default(0)
  currentQuestionIndex   Int       @default(0)
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  answers                Answer[]

  @@index([googleId])
}


model Question {
  id               String   @id @default(uuid())

  index            Int      @unique
  text             String
  imageUrl         String?  
  correctAnswer    String  

  originalPoints   Int
  currentPoints    Int
  minPoints        Int
  decayPercent     Float    

  hint1Text        String?
  hint2Text        String?
  hint1Penalty     Float    
  hint2Penalty     Float    

  hint1UnlockSec   Int      
  hint2UnlockSec   Int

  createdAt        DateTime @default(now())

  answers          Answer[]
}



model Answer {
  id              String   @id @default(uuid())
  userId          String
  questionId      String

  user            User     @relation(fields: [userId], references: [id])
  question        Question @relation(fields: [questionId], references: [id])

  submittedText   String
  isCorrect       Boolean
  awardedPoints   Int

  usedHint1       Boolean  @default(false)
  usedHint2       Boolean  @default(false)

  createdAt       DateTime @default(now())

  @@unique([userId, questionId]) 
  @@index([questionId])
}

